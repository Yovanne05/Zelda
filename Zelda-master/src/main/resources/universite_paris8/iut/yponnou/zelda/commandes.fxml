<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="universite_paris8.iut.yponnou.zelda.controleurs.CommandesControleur" stylesheets="@style.css">
    <!-- Background Image -->
    <children>
        <ImageView>
            <image>
                <Image url="@Images/medieval_background.jpg"/>
            </image>
            <fitWidth>1500</fitWidth>
            <fitHeight>900</fitHeight>
            <preserveRatio>true</preserveRatio>
        </ImageView>
    </children>
    <children>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Text styleClass="text-title" text="Commandes"/>
            <Text fx:id="texteCommandes" wrappingWidth="800" styleClass="text-body"/>
            <Button fx:id="boutonRetour" text="Retour au Menu" onAction="#lancementRetourJeu" styleClass="button"/>
        </VBox>
    </children>
</StackPane>
